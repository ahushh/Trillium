{
    "home": {
        "path": "/",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Home",
            "_action": "index"
        }
    },
    "user.sign.in": {
      "path": "/user/sign/in",
      "defaults": {
          "_controller": "\\Trillium\\Controller\\User",
          "_action": "signIn"
      }
    },
    "user.sign.in.check": {
        "path": "/user/sign/in/check",
        "defaults": {
            "_controller": null
        }
    },
    "user.sign.out": {
        "path": "/user/sign/out",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\User",
            "_action": "signOut"
        }
    },
    "user.edit.password": {
        "path": "/user/edit/password/{username}",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\User",
            "_action": "editPassword",
            "username": ""
        }
    },
    "user.is_authorized": {
        "path": "/user/is_authorized",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\User",
            "_action": "isAuthorized"
        }
    },
    "user.listing": {
        "path": "/user/listing",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\User",
            "_action": "listing"
        }
    },
    "user.create": {
        "path": "/user/create",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\User",
            "_action": "create"
        }
    },
    "user.remove": {
        "path": "/user/remove/{username}",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\User",
            "_action": "remove"
        }
    },
    "user.edit.roles": {
        "path": "/user/edit/roles/{username}",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\User",
            "_action": "editRoles"
        }
    },
    "settings.validate": {
        "path": "/settings/validate",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Settings",
            "_action": "validate"
        },
        "requirements": {
            "_method": "POST"
        }
    },
    "settings.skins": {
        "path": "/settings/skins",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Settings",
            "_action": "skins"
        }
    },
    "board.create": {
        "path": "/board/create",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Board",
            "_action": "create"
        },
        "requirements": {
            "_method": "POST"
        }
    },
    "board.get": {
        "path": "/board/get/{name}",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Board",
            "_action": "get"
        }
    },
    "board.update": {
        "path": "/board/update/{board}",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Board",
            "_action": "update"
        },
        "requirements": {
            "_method": "POST"
        }
    },
    "board.delete": {
        "path": "/board/delete/{name}",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Board",
            "_action": "delete"
        }
    },
    "board.listing": {
        "path": "/board/listing",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Board",
            "_action": "listing"
        }
    },
    "thread.create": {
        "path": "/thread/create",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Thread",
            "_action": "create"
        }
    },
    "thread.listing": {
        "path": "/thread/listing/{board}",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Thread",
            "_action": "listing"
        }
    },
    "thread.get": {
        "path": "/thread/get/{id}",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Thread",
            "_action": "get"
        }
    }
}