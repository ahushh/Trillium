{
    "firewalls": {
        "secured_area": {
            "pattern": "^/",
            "form": {
                "login_path": "/user/sign/in",
                "check_path": "/user/sign/in/check"
            },
            "logout": {
                "logout_path": "/user/sign/out"
            },
            "users": "security.mysqli_user_provider",
            "anonymous": true,
            "remember_me": {
                "name": "keep_auth",
                "key": "A_UNIQUE_RANDOM_KEY",
                "always_remember_me": true,
                "path": "/"
            }
        }
    },
    "access_rules": {
        "^/user/edit/password/.*$": {"roles": ["ROLE_ROOT"]},
        "^/user/edit/roles/.*$": {"roles": ["ROLE_ROOT"]},
        "^/user/create": {"roles": ["ROLE_ROOT"]},
        "^/user/remove/.*$": {"roles": ["ROLE_ROOT"]},
        "^/user/listing": {"roles": ["ROLE_ROOT"]},
        "^/board/create": {"roles": ["ROLE_ROOT"]},
        "^/board/update/.*$": {"roles": ["ROLE_ROOT"]},
        "^/board/delete/.*$": {"roles": ["ROLE_ROOT"]}
    },
    "role_hierarchy": {
    },
    "hide_user_not_found": false,
    "activity_listener": {
        "delay": 300
    },
    "roles": {
        "ROLE_ROOT": "Root",
        "ROLE_ADMIN": "Admin",
        "ROLE_USER": "User"
    }
}