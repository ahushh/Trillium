{
    "home": {
        "path": "/",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\Home",
            "_action": "index"
        }
    },
    "user.sign.in": {
      "path": "/user/sign/in",
      "defaults": {
          "_controller": "\\Trillium\\Controller\\User",
          "_action": "signIn"
      }
    },
    "user.sign.in.check": {
        "path": "/user/sign/in/check",
        "defaults": {
            "_controller": null
        }
    },
    "user.sign.out": {
        "path": "/user/sign/out",
        "defaults": {
            "_controller": null
        }
    },
    "user.edit.password": {
        "path": "/user/edit/password/{username}",
        "defaults": {
            "_controller": "\\Trillium\\Controller\\User",
            "_action": "editPassword",
            "username": ""
        }
    }
}